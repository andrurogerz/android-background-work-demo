<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/list_item_thread_stopButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:text="Stop"
        />
    <TextView
        android:id="@+id/list_item_thread_nameTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/list_item_thread_stopButton"
        android:enabled="false"
        android:padding="8dp"
        android:text="Name"
        />
    <TextView
        android:id="@+id/list_item_thread_priorityTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/list_item_thread_nameTextView"
        android:enabled="false"
        android:padding="8dp"
        android:text="Priority"
        />
    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/list_item_thread_iterationProgressBar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@id/list_item_thread_priorityTextView"
        android:enabled="false"
        android:padding="8dp"
        />
</RelativeLayout>