<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/button_startForegroundThread"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/foreground_thread"
        />
    <Button
        android:id="@+id/button_startDefaultThread"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/default_thread"
        />
    <Button
        android:id="@+id/button_startBackgroundThread"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/background_thread"
        />
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/list"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
</LinearLayout>